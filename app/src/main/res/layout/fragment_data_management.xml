<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingBottom="@dimen/bottom_nav_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Management (Demo/Presentation)"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use these buttons to generate sample data for demonstration purposes:"
        android:textSize="14sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnGenerateDummyData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Historical Data (30 days)"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/btnGenerateTodayData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Today's Data"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note: This will populate Firebase with realistic dummy data including various bottle counts, bin levels, rewards, and timestamps for each day."
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:background="@color/colorMainDark"
        android:textColor="@color/white" />

</LinearLayout>
